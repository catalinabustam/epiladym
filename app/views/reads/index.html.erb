<h1>Listado de pacientes</h1>

<div class="page-header">
  <h2>Listado de pacientes</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Paciente</th>
      <!--<th>Edad</th>
      <th>Sexo</th>
      <th>Lecturas</th>-->
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><strong><%= patient.code %></strong></td>
        <!--<td><%= patient.age %></td> 
        <td><%= patient.sex %></td> -->
        <td>
          <%= study_button15(patient,'1.5T') %>
        </td>
		<td><%=link_to "mostrar reportes", patient_reports_path(patient), class: 'btn btn-primary enabled' %></td>
		
	</tr>
	<% end %>
	
	
	<%@code3T=*(31..60)%>
	
    <% @code3T.each do |cod| %>
	<tr>
			<%patienti=Patient.find_by_cod3t(cod)%>
			<td><strong><%= "S#{patienti.cod3t}" %></strong></td>
          <td>	<%= study_button3(patienti,'3T') %></td>
		  <td><%=link_to "mostrar reportes", patient_reports_path(patienti), class: 'btn btn-primary enabled' %></td>
        

      </tr>
    <% end %>
	
  </tbody>
</table>
